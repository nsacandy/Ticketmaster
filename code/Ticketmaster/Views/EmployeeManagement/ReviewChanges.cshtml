@model List<Ticketmaster.Controllers.EmployeeManagementController.EmployeeChange>

<h2>Review Staged Changes</h2>

@if (Model.Count == 0)
{
    <p>No changes staged.</p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Action</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var change in Model)
        {
            <tr>
                <td>@change.Action</td>
                <td>@change.Employee.FirstName</td>
                <td>@change.Employee.LastName</td>
            </tr>
        }
        </tbody>
    </table>

    <form asp-action="CommitChanges" method="post">
        <button type="submit" class="btn btn-success">Commit Changes</button>
    </form>

    <form asp-action="DiscardChanges" method="post">
        <button type="submit" class="btn btn-danger">Discard Changes</button>
    </form>
}