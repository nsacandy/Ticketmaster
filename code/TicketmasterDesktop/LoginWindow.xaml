<Window x:Class="TicketmasterDesktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign In" Height="270" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Email" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox x:Name="UsernameBox" Grid.Row="1" Height="30" Margin="0,0,0,36" Grid.RowSpan="2"/>

        <TextBlock Text="Password" Grid.Row="2" Height ="15" Margin="0,18
                   ,0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Height="30" Margin="0,0,0,4"/>

        <Button Content="Login" Grid.Row="4" Margin="0,17,0,50" Height="40" Click="LoginButton_Click"/>
    </Grid>
</Window>

