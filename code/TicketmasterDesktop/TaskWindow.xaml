<Window x:Class="TicketmasterDesktop.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Board" Height="600" Width="800">

    <DockPanel>
        <Button Content="Logout"
                DockPanel.Dock="Top"
                HorizontalAlignment="Right"
                Margin="10"
                Click="LogoutButton_Click" />
        <Button Content="Back to Projects"
                HorizontalAlignment="Left"
                Margin="10"
                Click="BackToProjectsButton_Click"/>


        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="StagesPanel" Orientation="Vertical" Margin="10"/>
        </ScrollViewer>
    </DockPanel>
</Window>